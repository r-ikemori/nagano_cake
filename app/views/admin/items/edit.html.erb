<div class="container">
  <h4>商品編集</h4>
    <table>
      <tbody>
    <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
  <label for="inputImage">商品画像</label>
    <%= f.file_field :image, placeholder: "Image", accept: "image/*" %>
  <div class="form-group">
    <label for="inputName">商品名</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  </div>
  <div class="form-group">
    <label for="inputIntroduction">商品説明</label>
  <div><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%></div>
  </div>
  <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
      <label>税抜き価格</label>
    <%= f.number_field :price %>円<br>

  <label>販売ステータス</label>
    <%= f.radio_button :is_active, 1, checked: true %>販売中
　  <%= f.radio_button :is_active, 0 %>販売停止中<br>

  <div class="form-group">
  <%= f.submit "変更を保存", class:"btn btn-success" %>
<% end %>
</tbody>
</table>
</div>
</div>