<main>
  <body>
    <div class="container mx-auto" style="width: 600px;">
      <h4>商品編集</h4>
      <div class="row">
         <p id="notice"></p>

         <%= form_with model: @item, url: admin_item_path(@item) do |f| %>

            <div class="form-group row">
          <label class="col-sm-5 col-form-label">商品画像</label>
           <div class="col-sm-7">
             <%= f.file_field :image, placeholder: "Image", accept: "image/*" %>
           </div>

            <label class="col-sm-5 col-form-label">商品名</label>
            <div class="col-sm-7">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
            </div>

            <label class="col-sm-5 col-form-label">商品説明</label>
            <div class="col-sm-7">
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
            </div>

            <label class="col-sm-5 col-form-label">ジャンル</label>
            <div class="col-sm-7">
            <%= f.collection_select :genre_id, Genre.all, :id, :name %>
            </div>

            <label class="col-sm-5 col-form-label">税抜き価格</label>
            <div class="col-sm-7">
            <%= f.number_field :price %>円
            </div>

            <label class="col-sm-5 col-form-label">販売ステータス</label>
            <div class="col-sm-7">
             <%= f.radio_button :is_active, 1, checked: true %>販売中
        　    <%= f.radio_button :is_active, 0 %>販売停止中<br>
            </div>
           </div>
            <%= f.submit "変更を保存", class:"btn btn-success" %>

          <% end %>
      </div>
    </div>
  </div>
 </body>
</main>