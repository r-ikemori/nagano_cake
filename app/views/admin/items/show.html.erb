<main>
  <div class="container">
    <div class="row">
      <div class="col-3">
        <h4>商品詳細</h4>
            <%= image_tag @item.image %>
        </div>
          <div class"col-9">
            <p>商品名<%= @item.name %></p>
            <p>商品説明<%= @item.introduction %></p>
            <p>ジャンル<%= @item.genre.name %>
            <p>税込み価格(税抜き価格)<%= @item.with_tax_price %>（<%= @item.price %>）円</p>
            <p>販売ステータス
             <% if @item.is_active %>
                販売中
             <% else %>
                販売停止中
             <% end %>
            </p>
          <%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
</main>