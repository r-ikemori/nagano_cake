<div class="container">
<h2>商品一覧</h2>
<div class="d-flex justify-content-end m-3">
<%= link_to new_admin_item_path do %>
  <i class="fas fa-plus-circle fa-2x"></i>
  <% end %>
</div>
<table class="table tanle-hover table-inverse">
 <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
 <tbody>
<% @items.each do |item| %>
<tr>
  <td><%= item.id %></td>
  <td><%= link_to admin_item_path(item.id) do %>
    <%= item.name %>
    <% end %>
    </td>
  <td><%= item.price %></td>
  <td><%= item.genre.name %></td>
  <td>
    <% if item.is_active %>
      販売中
    <% else %>
      販売停止中
    <% end %>
  </td>
</tr>
<% end %>
</tbody>
</table>

<%= paginate @items, theme: 'twitter-bootstrap-4' %>
</div>