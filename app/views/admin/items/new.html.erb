<main>
  <body>
<div class="container">
<h4>商品新規登録</h4>
<div class="row">

<%= form_with model: @item, url: admin_items_path do |f| %>
<div>
<label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %><br>

  <label>商品名</label>
  <%= f.text_field :name %><br>

  <label>商品説明</label>
  <%= f.text_area :introduction %><br>
  <label>ジャンル</label>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <label>税抜き価格</label>
  <%= f.number_field :price %>円<br>

  <label>販売ステータス</label>
  <%= f.radio_button :is_active, 1, checked: true %>販売中
　<%= f.radio_button :is_active, 0 %>販売停止中<br>

  <%= f.submit "新規登録",class:"btn btn-success" %><br>

<% end %>

 <%= yield %>

</div>
</div>
</div>
</body>
</main>