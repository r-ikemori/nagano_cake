<h1><%= @customer.fullname %>の会員詳細</h1>
<%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "col-xs-12 btn btn-primary" %>

<table>
<tbody>
    <tr>
        <td>会員ID<%= @customer.id %></td><br>
        <td>氏名<%= @customer.fullname %></td><br>
        <td>カナ<%= @customer.fullname_kana %></td><br>
        <td>郵便番号<%= @customer.postal_code %></td><br>
        <td>住所<%= @customer.address %></td><br>
        <td>電話番号<%= @customer.telephone_number %></td><br>
        <td>メールアドレス<%= @customer.email %></td><br>
        <td><% if @customer.is_active %>
         有効
       <% else %>
         退会
       <% end %>
       </td>
    </tr>
</tbody>

</table>