<div class="container">
<h2>注文履歴一覧</h2>
<table class="table tanle-hover table-inverse">
 <thead>
    <tr>
      <th>購入日付</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
 <tbody>
<% @orders.each do |order| %>
<tr>
  <td><%= link_to admin_order_path(order.id) do %>
    <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
    <% end %>
    </td>
  <td><%= order.customer.fullname %></td>
  <td><%= order.ordered_products.sum(:amount)%></td>
  <td></td>
</tr>
<% end %>
</tbody>
</table>
</div>