 <div class="container">

    <h4>ジャンル一覧・追加</h4>
    <div class="m-5">
      <%= form_with model: @genre ,url: admin_genres_path do |f| %>
      <label class="mr-5">ジャンル名</label>
      <%= f.text_field :name %>

      <%= f.submit "新規登録",class:"btn btn-success" %>
      <% end %>

    </div>
    <div>
      <table class="table tanle-hover table-inverse">
        <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
     <tbody>
    <% @genres.each do |genre| %>
           <tr>
           <td><%= genre.name %></td>
           <td><%= link_to "編集する", edit_admin_genre_path(genre),class:"btn btn-success btn-sm" %></td>
           </tr>
    <% end %>
      </tbody>
     </table>
 </div>