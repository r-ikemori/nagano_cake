<div class="container mx-auto" style="width: 600px; heght:100px;">
    <h4>管理者ログイン</h4>
      <div class="row">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field row m-5">
          <label class="col-sm-5 col-form-label">メールアドレス</label>
           <div class="col-sm-7">
             <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
           </div>

            <label class="col-sm-5 col-form-label">パスワード</label>
            <div class="col-sm-7">
            <%= f.password_field :password, autocomplete: "current-password" %>
            </div>


          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
      </div>
    </div>
        <div class="justify-content-end m-3">
           <%= render "admin/shared/links" %>
        </div>
</div>