<h2>注文情報入力画面</h2>
<%= form_with model: @order, url: orders_confirm_path do |f| %>
<h2>支払い方法</h2>
  <div>
    <%= f.radio_button :payment, :credit_card %>
    <%= f.label :payment, "クレジットカード" %><br>

    <%= f.radio_button :payment, :transfer %>
    <%= f.label :payment, "銀行振込" %>

  </div>
  <div>
  <h2>お届け先住所</h2>
    <div class="field">
    <%= f.radio_button :address_number, 0 %>
    <%= f.label :address_number_0,"ご自身の住所" %>
    <p><%= '〒' + current_customer.postal_code + ' ' +  current_customer.address + ' ' +  current_customer.fullname%></p>
    </div>
    <div class="field"><%= f.radio_button :address_number, 1 %>
    <%= f.label :address_number_1,"登録済住所から選択" %><br>
    <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
    </div>
    <div class="field"><%= f.radio_button :address_number, 2 %>
    <%= f.label :address_number_2,"新しいお届け先" %><br>
      <label>郵便番号(ハイフンなし)</label>
      <%= f.text_field :postal_code %><br>
  　　<label>住所</label>
　　  <%= f.text_field :address %><br>
　　  <label>宛名</label>
      <%= f.text_field :name %>
  </div>
  <%= f.submit "確認画面へ進む",class:"btn btn-success" %>
  <% end %>