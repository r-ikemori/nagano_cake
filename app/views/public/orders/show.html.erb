<div class="container">
<h2>注文履歴一覧</h2>
<table class="table tanle-hover table-inverse table-bordered border border-3">
   <h6>注文情報</h6>
    <tr>
      <th>注文日</th>
        <td><%=@order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
        <td>
          <%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.customer.fullname %>
  　　    </td>
  　</tr>
  　<tr>
      <th>支払方法</th>
      　<td><%= @order.payment_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
        <td><% if @order.status %>
              入金確認
            <% else %>
              発送済み
            <% end %>
        </td>
    </tr>
  </thead>
</table>
<table class="table tanle-hover table-inverse table-bordered border border-3">
   <h6>請求情報</h6>
    <tr>
      <th>商品合計</th>
        <td><%= @order.total_payment - 800 %></td>
    </tr>
    <tr>
      <th>配送料</th>
        <td>
          <p>800</p>
  　　    </td>
  　</tr>
  　<tr>
      <th>ご請求額</th>
      　<td><%= @order.total_payment %></td>
    </tr>
  </thead>
</table>
</div>
<div class="container">
<table class="table tanle-hover table-inverse">
  <h6>注文内容</h6>
 <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
 <tbody>
<% @order.ordered_products.each do |f| %>
<tr>
  <td><%= f.item.name %></td>
  <td><%= f.with_tax_price %></td>
  <td><%= f.amount %></td>
  <td>
    <%= f.subtotal %>
  </td>
  <% end %>
</tbody>
</table>
</div>