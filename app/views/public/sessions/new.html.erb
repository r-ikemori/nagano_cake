
<div class="container mx-auto text-center" style="width: 600px;">
  <h2 class="text-left">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row m-5 ">
        <label class="col-sm-5 col-form-label">メールアドレス</label>
         <div class="col-sm-7">
           <%= f.email_field :email, autofocus: true, lautocomplete: "email" %>
         </div>
        <label class="col-sm-5 col-form-label">パスワード</label>
          <div class="col-sm-7">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>