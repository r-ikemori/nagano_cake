<div class="container mx-auto">
  <p id="notice"></p>
    <h4>配送先編集</h4>
       <div class="form-group m-2">
        <%= form_with model: @address ,url: address_path(@address) do |f| %>
        <div class="row">
          <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
            <div class="col-sm-9">
            <%= f.text_field :postal_code %>
            </div>

            <label class="col-sm-3 col-form-label">住所</label>
            <div class="col-sm-9">
            <%= f.text_field :address %>
            </div>

            <label class="col-sm-3 col-form-label">電話番号</label>
            <div class="col-sm-9">
            <%= f.text_field :telephone_number %>
            </div>
        </div>
        <div class="m-5">
        <%= f.submit "変更内容を保存",class:"btn btn-success" %>
        </div>
      <% end %>
      </div>
</div>