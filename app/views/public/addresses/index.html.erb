<div class="container mx-auto" style="width: 1000px;">
  <p id="notice"></p>
    <h4>配送先登録/一覧</h4>
      
      <%= form_with model: @address ,url: addresses_path do |f| %>
        <div class="form-group row m-2">
            <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
              <div class="col-sm-9">
                <%= f.text_field :postal_code %>
              </div>

              <label class="col-sm-3 col-form-label">住所</label>
              <div class="col-sm-9">
                <%= f.text_field :address %>
              </div>

              <label class="col-sm-3 col-form-label">宛名</label>
              <div class="col-sm-9">
                <%= f.text_field :name %>
              </div>
              <div class="col-sm-5"></div>
              <div class="col-sm-7">
          　<%= f.submit "新規登録",class:"btn btn-success" %>
          　 </div>
        </div>
    <% end %>
    </div>
<div class="container m-5" style="width: 700px;">
    <div>
      <table class="table tanle-hover table-inverse table-bordered border border-3">
        <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
     <tbody>
    <% @addresses.each do |address| %>
           <tr>
             <td><%= address.postal_code %></td>
             <td><%= address.address %></td>
             <td><%= address.name %></td>
             <td><%= link_to "編集する", edit_address_path(address),class:"btn btn-success btn-sm" %>
                 <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger btn-sm" %>
             </td>

           </tr>
    <% end %>
      </tbody>
     </table>
  </div>
</div>
