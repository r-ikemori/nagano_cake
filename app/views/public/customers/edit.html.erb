<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_path do |f| %>
 <label for="inputName">氏名</label>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  </div>
<div class="form-group">
  <label for="inputName_kana">フリガナ</label>
  <%= f.text_field :first_name_kana %>
  <%= f.text_field :last_name_kana %>
  </div>
  <div class="form-group">
  <label for="inputPostal_code">郵便番号</label>
  <div><%= f.text_field :postal_code %></div>
  </div>

   <div class="form-group">
  <label for="inputAddress">住所</label>
  <div><%= f.text_field :address %></div>
  </div>

   <div class="form-group">
  <label for="inputTelephone_number">電話番号</label>
  <div><%= f.text_field :telephone_number %></div>
  </div>

   <div class="form-group">
  <label for="inputEmail">メールアドレス</label>
  <div><%= f.email_field :email %></div>
  </div>

  <div class="form-group">
  <%= f.submit "変更を保存", class:"btn btn-success" %>
<% end %>