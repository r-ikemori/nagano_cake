<div class="container mx-auto" style="width: 1000px;">
  <p id="notice"></p>
     <h4>会員情報編集</h4>
     <%= form_with model: @customer, url: customers_path do |f| %>
      <div class="form-group row m-2">
          <label class="col-sm-2 col-form-label">氏名</label>
           <div class="col-sm-3">
             <%= f.text_field :first_name %>
           </div>
           <div class="col-sm-5">
             <%= f.text_field :last_name %>
           </div>
           <div class="col-sm-2">
           </div>

            <label class="col-sm-2 col-form-label">フリガナ</label>
            <div class="col-sm-3">
              <%= f.text_field :first_name_kana %>
            </div>
            <div class="col-sm-5">
              <%= f.text_field :last_name_kana %>
            </div>
            <div class="col-sm-2">
            </div>

            <label class="col-sm-2 col-form-label">郵便番号</label>
            <div class="col-sm-10">
            <%= f.text_field :postal_code %>
            </div>

            <label class="col-sm-2 col-form-label">住所</label>
            <div class="col-sm-10">
            <%= f.text_field :address %>
            </div>

            <label class="col-sm-2 col-form-label">電話番号</label>
            <div class="col-sm-10">
            <%= f.text_field :telephone_number %>
            </div>

            <label class="col-sm-2 col-form-label">メールアドレス</label>
            <div class="col-sm-10">
            <%= f.email_field :email %>
            </div>

       <%= f.submit "変更を保存", class:"btn btn-success" %>
     <% end %>
 </div>