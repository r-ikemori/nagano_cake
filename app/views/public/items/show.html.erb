<div class="container mx-auto" style="width: 1000px;">
  <p id="notice"></p>
    <div class="row">
      <div class="col-md-5">
        <%= image_tag @item.image, size: "200x200" %>
      </div>
      <div class="col-md-7">
          <h3> <%= @item.name %></h3>
          <p> <%= @item.introduction %></p>
          <p>￥<%= @item.with_tax_price %>(税込)</p>
          <%= form_with model:@cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <p><%= f.select :amount, *[1..3] %>個</p>
          <%= f.submit "カートに入れる" %>
          <% end %>
      </div>
    </div>